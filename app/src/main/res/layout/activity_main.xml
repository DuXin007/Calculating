
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="6"
    android:columnCount="4"
    android:id="@+id/grid">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:textSize="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="5dp"
        android:text="0"
        android:gravity="right"
        android:id="@+id/result"
        android:layout_row="0"
        android:layout_columnSpan="4"
         />    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:textSize="20sp"
        android:height="60dp"
        android:width="160dp"
        android:id="@+id/btn_backspace"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:layout_marginLeft="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete"
        android:textSize="20sp"
        android:height="60dp"
        android:width="180dp"
        android:id="@+id/btn_delete"
        android:layout_row="1"
        android:layout_columnSpan="2"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="40dp"
        android:height="100dp"
        android:width="80dp"
        android:id="@+id/btn7"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="40dp"
        android:height="100dp"
        android:width="80dp"
        android:id="@+id/btn8"
        android:layout_row="2"
        android:layout_column="1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="40dp"
        android:height="100dp"
        android:width="80dp"
        android:id="@+id/btn9"
        android:layout_row="2"
        android:layout_column="2"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="40dp"
        android:id="@+id/btn_div"
        android:height="100dp"
        android:width="100dp"
        android:layout_row="2"
        android:layout_column="3"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="40dp"
        android:height="100dp"
        android:width="80dp"
        android:id="@+id/btn4"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="40dp"
        android:height="100dp"
        android:width="80dp"
        android:id="@+id/btn5"
        android:layout_row="3"
        android:layout_column="1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="40dp"
        android:height="100dp"
        android:width="80dp"
        android:id="@+id/btn6"
        android:layout_row="3"
        android:layout_column="2"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="40dp"
        android:height="100dp"
        android:id="@+id/btn_mul"
        android:width="100dp"
        android:layout_row="3"
        android:layout_column="3"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="40dp"
        android:height="100dp"
        android:width="80dp"
        android:id="@+id/btn1"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="40dp"
        android:height="100dp"
        android:width="80dp"
        android:id="@+id/btn2"
        android:layout_row="4"
        android:layout_column="1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="40dp"
        android:height="100dp"
        android:width="80dp"
        android:id="@+id/btn3"
        android:layout_row="4"
        android:layout_column="2"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="40dp"
        android:id="@+id/btn_sub"
        android:width="100dp"
        android:height="100dp"
        android:layout_row="4"
        android:layout_column="3"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="40dp"
        android:width="80dp"
        android:height="100dp"
        android:id="@+id/dian"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40dp"
        android:width="80dp"
        android:height="100dp"
        android:id="@+id/btn0"
        android:layout_row="5"
        android:layout_column="1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="40dp"
        android:width="80dp"
        android:height="100dp"
        android:id="@+id/dengyu"
        android:layout_row="5"
        android:layout_column="2"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="40dp"
        android:id="@+id/btn_add"
        android:width="100dp"
        android:height="100dp"
        android:layout_row="5"
        android:layout_column="3"
        />

</GridLayout>